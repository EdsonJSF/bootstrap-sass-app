{
  "name": "bootstrap-scss-ts-app",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "purgecss --css src/assets/css/main.css --content src/*.html -o src/assets/css/main.css",
    "dev:html": "npx live-server src",
    "dev:cssinit": "rimraf src/assets/css && node-sass src/assets/sass/main.scss src/assets/css/main.css",
    "dev:css": "node-sass --watch src/assets/sass/main.scss src/assets/css/main.css",
    "dev:js": "rimraf src/assets/js && tsc -w",
    "dev": "concurrently npm:dev:*",
    "start": ""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.2.3",
    "concurrently": "^7.6.0",
    "live-server": "^1.2.2",
    "node-sass": "^8.0.0",
    "purgecss": "^5.0.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "tslint": "^6.1.3"
  }
}
